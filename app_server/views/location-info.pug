          p.rating
            i.fas.fa-star   
            i.fas.fa-star   
            i.fas.fa-star   
            i.fas.fa-star   
            i.far.fa-star   
          p 918 S Rte 291, Liberty, MO 64068
          p (816)792-1122
          .card.card-primary
            .card-block
              h2.card-title Opening hours
              p.card-text Monday - Thursday : 5:00am - 12:00am
              p.card-text Friday - Saturday : 4:00am - 12:00am
              p.card-text Sunday  : 4:00am - 12:00am
          .card.card-primary
            .card-block
              h2.card-title Facilities
              span.badge.badge-warning
                i.fa.fa-check
                | &nbsp;Hot drinks
              | &nbsp;
              span.badge.badge-warning
                i.fa.fa-check
